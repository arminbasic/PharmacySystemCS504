@model Avacom.eBudget.Web.Models.LoginModel

@{
    ViewBag.Title = "Login";
    //Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>eBudget | Prijava </title>

    <!-- Bootstrap -->
    <link href="base/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="base/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="base/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="base/vendors/animate.css/animate.min.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="base/build/css/custom.min.css" rel="stylesheet">
    <link href="base/build/css/select2.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <center>
                   
                    <h3>ŽUPANIJA / KANTON</h3>
                </center>
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()                                                
                        <h1>Prijava</h1>
                        @Html.ValidationSummary(true)
                        if (ViewBag.AccountDeactivated != null)
                        {
                            <div class="alert alert-danger">
                              <strong>@Resources.Labels.Notification !</strong> @Resources.Messages.Deactivate
                            </div>
                        }
                        <div>
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "korisničko ime" })
                        </div>
                        <div>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "lozinka" })

                        </div>
                        <div>
                            <button type="submit" class="btn btn-default submit"><i class="fa fa-lock"></i> @Resources.Labels.BtnLogin</button>
                        </div>

                        <div class="clearfix"></div>
                        <div class="separator">
                            <div class="clearfix"></div>
                            <br />

                            <div>
                                <h1>eBudget</h1>
                                <img src="~/Content/Images/USAID Logo.png" alt="logo" style="width:100%;" />
                                <br />
                                <br /><br />
                                <center><p>&copy; @DateTime.Now.Year -  AVACOM Group d.o.o. Solutions</p></center>
                            </div>
                        </div>

                    }
                </section>
            </div>
        </div>
    </div>
</body>
</html>
