@model IEnumerable<PharmacySystem.Models.MedicineGroup>

@{
    ViewBag.Title = "Medicine Group";
}

<br />
<h2>Medicine Group</h2>
<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btn btn-primary btn-large" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MedicineGroupName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MedicineGroupName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MedicineGroupID }, htmlAttributes: new { @class = "btn btn-primary btn-large" }) 
            @Html.ActionLink("Details", "Details", new { id=item.MedicineGroupID }, htmlAttributes: new { @class = "btn btn-info btn-large" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.MedicineGroupID }, htmlAttributes: new { @class = "btn btn-warning btn-large" })
        </td>
    </tr>
}

</table>
